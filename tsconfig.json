{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [ "ES2020", "DOM", "DOM.Iterable" ],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
  },
  // "include": [ "src", "eslint.config.mjs" ]
}
